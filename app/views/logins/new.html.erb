<% if params[:invalid_password] == "true" %>
  <p>Invalid password for email address <%= params[:email] %></p>
<% end %>
<h1>Log In</h1>

<h3>Not a user? <%= link_to("Sign up now!", :new_user) %></h3>
<%= form_tag logins_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </p>
  
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  
  <%= submit_tag "Log In" %>
<% end %>